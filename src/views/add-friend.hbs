<div class="container w-50 text-center">
    <h1 class="addBill">Add A Friend</h1>
    <hr>
     {{#if message}}
    <div class="alert alert-danger" role="alert">{{ message }}</div>
    {{/if}}
    <form class="justify-content-center" action="/home/addFriend" method="POST">
        <div class="form-row">
            <div class="form-group col-6">
                <label for="firstName">First Name:</label>
                <input class="form-control" type="text" name="firstName" placeholder="John" required>
            </div>
            <div class="form-group col-6">
                <label for="lastName">Last Name:</label>
                <input class="form-control" type="text" name="lastName" placeholder="Doe" required>
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input class="form-control" type="email" name="email" placeholder="john.doe@nyu.edu" required>
        </div>
        <div>
            <input class="btn btn-dark" type="submit" value="Add">
            <input class="btn btn-dark" type="reset" value="Reset">
        </div>
    </form>
</div>