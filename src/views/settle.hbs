<div class="container w-50 text-center">

    <h1 class="addBill">Settle Up</h1>
    <hr> 

    {{#if message}}
        <div class="alert alert-danger" role="alert">{{ message }}</div>
    {{/if}} 

    {{#if friends}}
    <form class="justify-content-center" action="/home/settle" method="POST">
        
        <div class="form-row">
            <div class="form-group col-6">
                <label for="payer">Payer:</label>
                <select class="payer form-control" name="payer" required>
                    {{#each friends}}
                        <option value="{{this.email}}">{{this.email}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group col-6">
                <label for="payee">Payee:</label>
                <input type="text" class="payee form-control" name="payee" value="{{currentUser.email}}" disabled required>
            </div>
        </div>
        <div class="form-group">
            <label for="settleAmount">Amount:</label>
            <input class="form-control" type="number" min="0.01" step="0.01" name="settleAmount" placeholder="$0.00" required>
        </div>
        <div>
            <input class="btn btn-dark" type="submit" value="Settle!">
            <input class="btn btn-dark" type="reset" value="Reset">
        </div>
    </form>
    {{else}}
    <p>Please
        <a href="/home/addBill">add some bills</a>
        before you settle up.
    </p>
    {{/if}}
</div>
